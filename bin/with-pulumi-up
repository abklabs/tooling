#!/usr/bin/env opsh

usage () {
    local ret=0

    if [[ $# -gt 0 ]] ; then
	log::error "$*"
	ret=1
    fi
    
    echo "usage: $0 cmd0 [cmd1..cmdn]"
    exit "$ret"
}

[[ $# -gt 0 ]] || usage "you must provide a command to run after the pulumi stack is setup"
[[ -f Pulumi.yaml ]] || usage "this must be run from a directory with a pulumi stack"

pulumi up --yes 

RET=0

"${@}" || RET=$?

pulumi down --yes

exit "$RET"
